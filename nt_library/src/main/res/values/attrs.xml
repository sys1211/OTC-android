<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBarLayout">
        <attr name="TitleBar_title" format="reference|string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="leftIcon" format="reference|string" />
        <attr name="leftIconColor" format="color" />
        <attr name="immersive" format="boolean" />
        <attr name="divider_color" format="reference|color" />
        <attr name="divider_height" format="reference|dimension" />
        <attr name="customCenterView" format="reference" />
    </declare-styleable>

    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="dashOrientation" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ButtonStyle">
        <attr name="corner" format="dimension"/>
        <attr name="press_color" format="reference|color"/>
        <attr name="normal_color" format="reference|color"/>
        <attr name="disable_color" format="reference|color"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="stroke_color" format="reference|color"/>
    </declare-styleable>

    <!-- shadow layout-->
    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_shadowDirection" >
            <enum name="all" value="0" />
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>
    <!-- shadow layout-->

    <!-- scroller-->
    <declare-styleable name="BubbleScroller">
        <attr name="bubbleScroller_textSize" format="reference" />
        <attr name="bubbleScroller_textColor" format="reference" />
        <attr name="bubbleScroller_highlightColor" format="reference" />
        <attr name="bubbleScroller_highlightSize" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>


    <!--圆角TextView-->
    <declare-styleable name="CornerTextView">
        <attr name="rtvBgColor" format="color"/>
        <attr name="rtvBorderWidth" format="dimension"/>
        <attr name="rtvBorderColor" format="dimension"/>
        <attr name="rtvRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="iconClear" format="reference" />
    </declare-styleable>
</resources>